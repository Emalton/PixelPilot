{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ],
          "exclude": ["PixelPilot.Tests/*.csproj", "PixelPilot.DebugTools/*.csproj"]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "PixelPilot Documentation",
      "_appTitle": "PixelPilot",
      "_appFooter": "PixelPilot Â© 2024",
      "_appLogoPath": "images/pixel_pilot.png",
      "_appFaviconPath": "images/pixel_pilot.png",
      "_enableSearch": true,
      "pdf": false
    }
  }
}